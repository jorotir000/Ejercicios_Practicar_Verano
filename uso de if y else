/* Pedir dos n√∫meros y decir si son iguales o no. */
package practicasverano;

import java.util.Scanner;

/**
 *
 * @author joseoropesatirado
 */
public class PracticasVerano {

    public static void main(String[] args) {

        Scanner reader = new Scanner(System.in);
        int n1, n2;
        
        
        System.out.println("Introduce el valor 1: ");
        n1=reader.nextInt();
        
        System.out.println("Introduce el valor 2: ");
        n2=reader.nextInt();
        
        if (n1==n2){
            
            System.out.println("El numero "+n1 +" es igual a "+n2);
            
        } else{
            
            System.out.println("Los numero introducidos no son iguales");
            
        }

    }
