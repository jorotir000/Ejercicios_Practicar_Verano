/* 11. Pedir un n√∫mero entre 0 y 9.999 y decir cuantas cifras tiene.*/
package practicasverano;

import java.util.Scanner;

/**
 *
 * @author joseoropesatirado
 */
public class PracticasVerano {

    public static void main(String[] args) {

        Scanner reader = new Scanner(System.in);
        int n1;
        
        
        System.out.println("Introduce un: ");
        n1=reader.nextInt();
        
        
        String x = Integer.toString(n1);
               
        if (n1<9999){
            
            System.out.println("El numero "+n1 +" tiene un total de "+ x.length() +" digitos");
            
            
        } else {
            
            System.out.println("El numero "+n1 +" no es valido");
            
        }

    }   

}
