/* 3. Pedir el radio de una circunferencia y calcular su longitud. (L=2 * pi * r) */
package practicasverano;

import java.util.Scanner;

/**
 *
 * @author joseoropesatirado
 */
public class PracticasVerano {

    public static void main(String[] args) {

        Scanner reader = new Scanner(System.in);
        double r;
        
        
        System.out.println("Introduce el valor del radio: ");
        r=reader.nextDouble();
        
        System.out.println("La longitud de la circunferencia es: "+ 2*Math.PI*r);

    }
